<h1 style="color:black">Listing movies</h1>

<table>
  <tr>
    <th style="color:black">Title</th>
    <th style="color:black">Rating</th>
  </tr> 

<% @movies.each do |movie| %>
  <tr>
    <td style="color:black"><%=h movie.title %></td>
    <td><%=h movie.rating %></td>   
 
    <td style="color:black"><%= link_to 'Show', movie %></td>
    <td style="color:black"><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td style="color:black"><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p style="color:black">
<%= link_to 'New movie', new_movie_path %></p>
